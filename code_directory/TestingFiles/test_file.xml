<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/matrix5">


    <TextView
        android:id="@+id/congratulations"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="45sp"
        android:textColor="@color/colorText"
        android:layout_marginTop="100sp"
        android:text="@string/congrats" />

    <Button
        android:id="@+id/main_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/congratulations"
        android:layout_marginTop="20sp"
        android:text="@string/main_menu" />

    <TextView
        android:id="@+id/battery_level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_menu_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="@string/battery_level"
        android:textColor="@color/colorText"

        />

    <TextView
        android:id="@+id/path_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/battery_level2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:textColor="@color/colorText" />

</RelativeLayout>